<!-- ナビゲーションバー -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path_for('index', {}) }}">プロジェクト名</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav main_header">
                <li {{ activeHeader == 'index' ? 'class=active' : '' }}>
                    <a href="{{ path_for('index', {'active-header': 'index'}) }}">Home</a>
                </li>
                <li {{ activeHeader == 'content1' ? 'class=active' : '' }}>
                    <a href="{{ path_for('content1', {'active-header': 'content1'}) }}">コンテンツ1</a>
                </li>
                <li {{ activeHeader == 'content2' ? 'class=active' : '' }}>
                    <a href="#">コンテンツ2</a>
                </li>
            </ul>
            {% if (session is defined) and session['isAuth'] %}
              <ul class="nav navbar-nav navbar-right">
                  <li><a href="#">{{ session['account'] }}</a></li>
                  <li><a href="{{ path_for('logout', {}) }}">Logout</a></li>
              </ul>
            {% else %}
              <ul class="nav navbar-nav navbar-right">
                  <li><a href="{{ path_for('signUp', {}) }}">Sign Up</a></li>
                  <li><a href="{{ path_for('signIn', {}) }}">Sign In</a></li>
              </ul>
            {% endif %}
        </div><!--/.nav-collapse -->
    </div>
</nav>
